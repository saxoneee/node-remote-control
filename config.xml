<?xml version='1.0' encoding='utf-8'?>
<widget id="com.saxoneee.noderemotecontrol" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>node remote control</name>
    <description>
        simple node.js/android app to remotly control the mouse cursor of windows.
    </description>
    <author email="hendrik.sachse@gmail.com" href="http://www.hendriksachse.de">
        Hendrik Sachse
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
