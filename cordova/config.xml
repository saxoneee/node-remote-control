<?xml version='1.0' encoding='utf-8'?>
<widget id="com.henman.node-remote-control" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>node-remote-control</name>
    <description>
        
    </description>
    <author email="hendrik.sachse@gmail.com" href="http://henman.de">
        henman
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <allow-navigation href="*" />
    
</widget>
